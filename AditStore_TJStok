<script>
  function toggleMusic() {
    const music = document.getElementById("bgm");
    if (music.paused) {
      music.play();
    } else {
      music.pause();
    }
  }

  function toggle(id) {
    const el = document.getElementById(id);
    if (el) {
      el.classList.toggle("hidden");
    }
  }

  // Dummy functions for buttons (kamu bisa isi sesuai kebutuhan)
  function showHome() {
    alert("Home clicked!");
  }
  function showList() {
    const list = document.getElementById("list");
    list.classList.toggle("hidden");
  }
  function showIdent() {
    alert("Ident Adit clicked!");
  }
  function orderWa() {
    window.open("https://wa.me/6281234567890", "_blank");
  }
</script>

